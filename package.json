{
  "name": "azure-synapse-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Azure Synapse Analytics workspace management",
  "license": "MIT",
  "type": "module",
  "bin": {
    "azure-synapse-mcp-server": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "npm run build && npm run start",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@azure/identity": "^4.0.1",
    "@azure/core-auth": "^1.5.0",
    "@azure/core-rest-pipeline": "^1.12.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "azure",
    "synapse",
    "analytics",
    "data",
    "pipeline",
    "ai",
    "llm"
  ],
  "author": "Your Name",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/azure-synapse-mcp-server.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
