# Azure Synapse MCP Server Configuration
# Copy this file to .env and fill in your values

# Azure Authentication (Required)
AZURE_TENANT_ID=your-tenant-id
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Azure Synapse Configuration
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_SYNAPSE_WORKSPACE=your-synapse-workspace

# SQL Pool Configuration
SYNAPSE_DEDICATED_POOL=your-dedicated-pool-name
SYNAPSE_DEDICATED_CONNECTION=Server=tcp:your-workspace.sql.azuresynapse.net,1433;Database=your-db;Authentication=Active Directory Password;User ID=your-user;Password=your-password;

SYNAPSE_SERVERLESS_ENDPOINT=your-workspace-ondemand.sql.azuresynapse.net
SYNAPSE_SERVERLESS_CONNECTION=Server=tcp:your-workspace-ondemand.sql.azuresynapse.net,1433;Database=master;Authentication=Active Directory Password;User ID=your-user;Password=your-password;

# Optional Configuration
LOG_LEVEL=info
CACHE_TTL=300
NODE_ENV=development

# Multi-tenant Configuration (Optional)
# Path to JSON file with multiple tenant configurations
# SYNAPSE_CONFIG_PATH=./config/tenants.json
