# Azure Synapse MCP Server Configuration

# Azure Authentication
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Azure Synapse Workspace
SYNAPSE_WORKSPACE_NAME=your-workspace-name
SYNAPSE_WORKSPACE_URL=https://your-workspace-name.dev.azuresynapse.net
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group

# MCP Server Configuration
MCP_SERVER_NAME=azure-synapse-mcp-server
MCP_SERVER_VERSION=1.0.0
LOG_LEVEL=info

# Optional: Azure Authentication Method (default: client_credentials)
# Options: client_credentials, managed_identity, azure_cli
AZURE_AUTH_METHOD=client_credentials

# Optional: Request timeout in milliseconds (default: 30000)
REQUEST_TIMEOUT=30000

# Optional: Enable detailed logging for debugging
DEBUG_MODE=false
